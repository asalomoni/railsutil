<div data-ru-ru-standard-sh style="height:30px;background-color:orange;">

</div>

<div data-ru-standard-dh style="background-color:yellow;">
  <div data-ru-standard-dh style="background-color:green;">
    <div data-ru-standard-sh style="height:10px;background-color:pink;"> </div>
    <div data-ru-standard-sh data-ru-alert><%= render 'layouts/success_message', message: 'Yeah!' %></div>
    <div id="blue" data-ru-standard-dh style="background-color:blue;">
      <div data-ru-relative-h="#blue:60" data-ru-relative-w="#blue:40" data-ru-relative-p="50:50" style="background-color:purple;"> </div>
      <%= text_field_tag(:balls_search, '', data: {autocomplete_source: ball_types_balls_path, autocomplete_params: '0:true', autocomplete_append_to: '#blue'}) %>
      <%= text_field_tag(:date, '', data: {datepicker: true}) %>
      <%= form_tag ajax_call_balls_path, :id => 'ajax_call', data: {ajax_form: 'ajax_call_loading'}, :method => :get, remote: true do %>
          <%= submit_tag :submit %>
      <% end %>

      <%= button_to 'Yo', ajax_call_balls_path, method: :get, remote: true, data: {ajax_button: 'ajax_call_loading'} %>

      <%= link_to 'Yo link', ajax_call_balls_path, method: :get, remote: true, data: {ajax_link: 'ajax_call_loading'} %>



      <div id="pagination_container" data-ru-pagination="ajax_call_loading" ><%= ajax_will_paginate @balls %></div>

    </div>
  </div>
</div>

<div data-ru-standard-sh style="height:30px;background-color:red;">

</div>

<div id="loading_layer" data-ru-loading-layer="ajax_call_loading" ></div>